.container{
  height: 1206rpx;
  background-color: #f0f8ff;
  border-radius: 60rpx;
}

.avatar-wrapper{
  position: relative; 
  left: 0rpx; 
  top: 20rpx;
  width: 200rpx;
  height: 200rpx;
  padding: 0;
  border-radius: 50%;
  box-shadow: 0 0 40rpx 10rpx rgba(0, 0, 0, 0.08);
}
.avatar-wrapper .avatar{
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
  background: #dcdcdc;
}

.form{
  width: 90%;
  min-height: 400rpx;
  margin: 80rpx auto;
  position: relative;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 60rpx;
  box-shadow: 0 0 40rpx 10rpx rgba(0, 0, 0, 0.08);
}
.inputs{
  margin: 100rpx auto 60rpx;
}
.item{
  width: 80%;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 70rpx;
  padding: 20rpx 30rpx;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
}
.item input{
  flex: 1;
  height: 80rpx;
  border: 1px solid rgba(255, 163, 115, 0.5);
  border-radius: 40rpx;
}
.title{
  padding-right: 30rpx;
  padding-left: 20rpx;
}
.btn{
  width: 60%;
  height: 110rpx;
  background-image: linear-gradient(90deg,#ffc77f,#ff7c62);
  border-radius: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  margin: 60rpx auto 60rpx;
  box-shadow: 0 0 40rpx 10rpx rgba(0, 0, 0, 0.08);
}