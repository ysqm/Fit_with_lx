<view class="search-container">
  <input class="search-input" placeholder="搜索帖子..." bindinput="searchPosts" />
</view>
<view class="container">
  <!-- 用户发表的内容列表 -->
  <view wx:for="{{filteredPosts}}" wx:key="index" class="post">
    <view class="post">
      <view class="user-info">
        <image class="avatar" src="{{item.avatar}}"></image>
        <text class="username">{{item.username}}</text>
      </view>
      <view class="content">
        <text>{{item.content}}</text>
      </view>
      <!-- 显示图片 -->
      <view class="images" wx:if="{{item.images.length > 0}}">
        <image wx:for="{{item.images}}" wx:key="index" src="{{item}}" class="post-image"></image>
      </view>
      <view class="interaction">
        <!-- 点赞按钮 -->
        <button class="like-button" data-postid="{{item.id}}" bindtap="likePost">
          <image class="like-icon" src="{{item.liked ? '/image/like.jpg' : '/image/like.jpg'}}"></image>
          <text>{{item.likes}}</text>
        </button>
        <!-- 评论按钮 -->
        <button class="comment-button" data-postid="{{item.id}}" bindtap="goToComment">
          <image class="comment-icon" src="/image/comment.jpg"></image>
          <text>{{item.comments}}</text>
        </button>
      </view>
    </view>
  </view>

  <!-- 添加发帖按钮 -->
  <button class="new-post-button" bindtap="goToNewPost">+</button>
</view>