<!-- gym.wxml -->
<view class="container">
  <view class="exercise-selector">
    <picker mode="selector" range="{{exerciseNames}}" bindchange="onExerciseChange" disabled="{{isRunning}}">
      <view class="picker">
        当前运动: {{currentExercise}}
      </view>
    </picker>
  </view>

  <view class="info">
    <view class="info-item">
      <text class="info-label">时间:</text>
      <text class="info-value">{{time}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">热量:</text>
      <text class="info-value">{{calories}} 千卡</text>
    </view>
  </view>

  <view class="controls">
    <button bindtap="startPauseExercise" class="btn action-btn">{{isRunning ? '暂停' : '开始'}}</button>
    <button bindtap="stopExercise" class="btn action-btn">结束</button>
  </view>
</view>
