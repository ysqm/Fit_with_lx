.container {
  padding: 20rpx;
  background-color: #f0f8ff;
  min-height: 100vh;
}

.content-input {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.submit-button {
  width: 100%;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 18rpx;
}
