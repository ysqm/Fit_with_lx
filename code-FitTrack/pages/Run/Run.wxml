<!-- run.wxml -->
<view class="container">
  <map id="map" class="map" latitude="{{latitude}}" longitude="{{longitude}}" scale="16" polyline="{{polyline}}" show-location>
  </map>
  <view class="stats">
    <view class="stat-item">
      <text class="stat-label">时间</text>
      <text class="stat-value">{{time}}</text>
    </view>
    <view class="stat-item">
      <text class="stat-label">里程</text>
      <text class="stat-value">{{distance}} 公里</text>
    </view>
    <view class="stat-item">
      <text class="stat-label">热量</text>
      <text class="stat-value">{{calories}} 千卡</text>
    </view>
  </view>
  <view class="buttons">
    <button bindtap="startRunning" wx:if="{{!isRunning && !isPaused}}" class="button start">开始跑步</button>
    <button bindtap="pauseRunning" wx:if="{{isRunning}}" class="button pause">暂停跑步</button>
    <button bindtap="resumeRunning" wx:if="{{isPaused}}" class="button resume">继续跑步</button>
    <button bindtap="stopRunning" wx:if="{{isRunning || isPaused}}" class="button stop">结束跑步</button>
  </view>
</view>
