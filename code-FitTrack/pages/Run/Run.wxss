.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.map {
  width: 100%;
  height: 60%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.stats {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 28rpx;
  color: #888;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
}

.buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.button {
  width: 200rpx;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.start {
  background-color: #4CAF50;
  color: white;
}

.pause {
  background-color: #FF9800;
  color: white;
}

.resume {
  background-color: #FF9800;
  color: white;
}

.stop {
  background-color: #F44336;
  color: white;
}
