/* gym.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.exercise-selector {
  margin-bottom: 20px;
}

.picker {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
  text-align: center;
  background-color: #fff;
}

.info {
  margin-bottom: 20px;
  width: 100%;
}

.info-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 10px;
  background-color: #fff;
  padding: 10px;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.info-label {
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

.info-value {
  font-size: 16px;
  color: #555;
}

.controls {
  display: flex;
  gap: 10px;
  width: 100%;
}

.btn {
  padding: 10px 15px; /* 调整按钮大小 */
  border: none;
  border-radius: 5px;
  color: #fff;
  font-size: 16px;
  flex: 1;
  text-align: center;
}

.action-btn {
  background-color: #007bff;
}